\makeatletter
\define@key{beamerframe}{rod}[true]{
    \setbeamercolor{titlelike}{fg=white}
    \setbeamercolor{normal text}{fg=white}
    \usebeamercolor[fg]{normal text}
    \setbeamercolor{background canvas}{bg=KUrod}
    \setbeamertemplate{headline}{
        \begin{textblock}{10}(0.5,0.3)
                \vspace{-0.1cm}
                \includegraphics[height=9pt]{KU/KU-logo.png}
        \end{textblock}
        \begin{textblock}{10}(1,0.3)
                \fontsize{5}{5}\fontfamily{ptm}\selectfont \textcolor{black}{\textls[200]{KØBENHAVNS UNIVERSITET}}
        \end{textblock}
        \includegraphics[width=\paperwidth,height=14pt]{KU/hoved.png}
        \ifdefined\@toplinje
        \begin{textblock}{10}(3,0.3)
            \begin{flushright}
                \vspace{-0.33cm}
                \tiny\textcolor{black}{\@toplinje\ \ \ \ \ }
            \end{flushright}
        \end{textblock}
        \fi
        \begin{textblock}{10}(13,0.3)
            \tiny\textcolor{black}{\today\ \ \ \ \ \insertframenumber}
        \end{textblock}
    }
}
